<android.support.v4.widget.DrawerLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.xkcn.crawler.view.SidebarView
        android:id="@+id/sidebar"
        android:layout_gravity="start"
        android:onClick="emptyOnClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:showDividers="middle"
            android:divider="@drawable/divider_sidebar"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/bg_sidebar_item"
                android:gravity="center"
                android:id="@+id/tv_latest"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:text="@string/sidebar_cat_latest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:textAllCaps="false"
                android:background="@drawable/bg_sidebar_item"
                android:gravity="center"
                android:id="@+id/tv_hotest"
                android:textSize="24sp"
                android:text="@string/sidebar_cat_hotest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <pl.charmas.android.tagview.TagView
                android:id="@+id/tag_cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.xkcn.crawler.view.SidebarView>

</android.support.v4.widget.DrawerLayout>
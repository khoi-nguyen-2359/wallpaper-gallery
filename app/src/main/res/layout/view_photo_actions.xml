<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/shape_photo_actions_bg"
    >

    <ImageButton
        android:background="@drawable/ripple_photo_action_btn"
        android:id="@+id/bt_download"
        android:src="@drawable/ic_file_download_grey600_24dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <ImageButton
        android:background="@drawable/ripple_photo_action_btn"
        android:id="@+id/bt_set_wallpaper"
        android:src="@drawable/ic_now_wallpaper_grey600_24dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <ImageButton
        android:background="@drawable/ripple_photo_action_btn"
        android:id="@+id/bt_share"
        android:src="@drawable/ic_share_grey600_24dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

</LinearLayout>